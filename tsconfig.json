{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@components-core/*": [
        "components-core/*"
      ],
      "@classes/*": [
        "classes/*"
      ]
    },
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
